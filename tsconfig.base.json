{
   "compilerOptions": {
      "lib": ["ESNext"],
      "module": "NodeNext",
      "target": "ESNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "outDir": "dist",
      "rootDir": "./"
   },
   "include": [
      "packages/**/*"
   ],
   "exclude": [
      "node_modules",
      "dist"
   ]
}